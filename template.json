{
  "variables": {
    "headless": "",
    "iso_checksum": "0d9dc37b5dd4befa1c440d2174e88a87",
    "iso_name": "CentOS-6.5-x86_64-minimal.iso",
    "iso_path": "iso",
    "iso_url": "http://archive.kernel.org/centos-vault/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "true",
    "version": "0.2",
    "tld": "dev.vm",

    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ],
      "boot_wait": "4s",
      "disk_size": 10140,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "headless": "{{ user `headless` }}",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-1",
      "source_ami": "ami-57cfc412",
      "instance_type": "t2.micro",
      "ssh_username": "root",
      "ami_name": "CentOS-6.5__iAPPS_{{user `version`}}",
      "ami_description": "iApps Standard Development Environment"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "UPDATE={{user `update`}}"
      ],
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/base.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
      "scripts": [
        "scripts/lamp.sh",
        "scripts/common.sh",
        "scripts/cleanup.sh"
      ]
    },
    {
      "type" : "chef-solo",
      "cookbook_paths": ["chef/cookbooks"],
      "data_bags_path":  "chef/data_bags",
      "roles_path":      "chef/roles",
      "prevent_sudo": false,
      "skip_install": false,
      "json":{"app":{"name":"{{user `tld`}}"}},
      "run_list":  [
        "role[webserver]"
      ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type":  "vagrant",
      "output" : "boxes/{{.Provider}}/iapps_{{user `version`}}.box",
      "vagrantfile_template": "vagrant_templates/iapps.rb",
      "keep_input_artifact": true
    }
  ]
}
