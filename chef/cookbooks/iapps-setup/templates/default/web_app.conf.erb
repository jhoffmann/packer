<VirtualHost *:80>
   ServerName <%= @params[:server_name] %>
   <% if @params[:server_aliases] -%>
   ServerAlias <%= @params[:server_aliases].map! { |k| "#{k}.#{node['app']['name']}.vm" }.join(" ") %>
   <% end -%>
   DocumentRoot <%= @params[:docroot] %>

   <Directory <%= @params[:docroot] %>>
      EnableSendfile Off
      Options FollowSymLinks
      AllowOverride <%= [@params[:allow_override] || "All" ].flatten.join " " %>
      Order allow,deny
      Allow from all
   </Directory>

   <Directory />
      Options FollowSymLinks
      AllowOverride None
   </Directory>

   php_value error_log <%= @params[:docroot] %><%= @params[:name] %>-phperrors.log

   LogLevel info
   ErrorLog <%= @params[:docroot] %><%= @params[:name] %>-error.log
   CustomLog <%= @params[:docroot] %><%= @params[:name] %>-access.log combined
</VirtualHost>

<IfModule mod_ssl.c>
<VirtualHost _default_:443>
   ServerName <%= @params[:server_name] %>
   <% if @params[:server_aliases] -%>
   ServerAlias <%= @params[:server_aliases].map! { |k| "#{k}.#{node['app']['name']}.vm" }.join(" ") %>
   <% end -%>
   DocumentRoot <%= @params[:docroot] %>

   <Directory <%= @params[:docroot] %>>
      EnableSendfile Off
      Options FollowSymLinks
      AllowOverride <%= [@params[:allow_override] || "All" ].flatten.join " " %>
      Order allow,deny
      Allow from all
   </Directory>

   <Directory />
      Options FollowSymLinks
      AllowOverride None
   </Directory>

   php_value error_log <%= @params[:docroot] %><%= @params[:name] %>-phperrors.log

   LogLevel info
   ErrorLog <%= @params[:docroot] %><%= @params[:name] %>-error.log
   CustomLog <%= @params[:docroot] %><%= @params[:name] %>-access.log combined

   SSLEngine on
   SSLCertificateFile    /etc/ssl/certs/ssl-cert-snakeoil.pem
   SSLCertificateKeyFile /etc/ssl/private/ssl-cert-snakeoil.key

   BrowserMatch "MSIE [2-6]" \
      nokeepalive ssl-unclean-shutdown \
      downgrade-1.0 force-response-1.0
   # MSIE 7 and newer should be able to use keepalive
   BrowserMatch "MSIE [17-9]" ssl-unclean-shutdown
</VirtualHost>
</IfModule>
